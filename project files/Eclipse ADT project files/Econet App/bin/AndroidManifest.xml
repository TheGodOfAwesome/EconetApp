<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.econetapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.econetapp.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.econetapp.Recharge"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.econetapp.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.econetapp.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.econetapp.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.econetapp.Call_Me_Back"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.econetapp.CALL_ME_BACK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
              
    </application>

</manifest>
